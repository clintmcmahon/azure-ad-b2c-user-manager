@using B2CUserAdmin.Web.Models;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B2C User Admin</title>
    <!-- SEO Meta Tags -->
    <meta name="description"
        content="Simply view and edit Azure B2C user properties, custom attributes and extension properties with our user-friendly interface, facilitating seamless viewing and updating of custom attributes and user properties of Azure B2C users.">
    <meta name="keywords"
        content="azure, b2c, custom properties, custom attributes, extension attributes, extension properties, edit users, view users, user administration">
    <meta name="author" content="Creadtex Studio">

    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon and Touch Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="/assets/favicon/site.webmanifest">
    <link rel="mask-icon" href="/assets/favicon/safari-pinned-tab.svg" color="#2d68b6">
    <link rel="shortcut icon" href="/assets/favicon/favicon.ico">
    <meta name="msapplication-TileColor" content="#080032">
    <meta name="msapplication-config" content="/assets/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff" </head>

    <!-- Body -->
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


<body>
    <!-- Navbar -->
    <div class="container">
        <header class="d-flex flex-wrap py-3 mb-4 border-bottom">
            <a class="navbar-brand p-0 me-2" href="/" aria-label="Azure AD B2C User Manager">
                Azure AD B2C User Manager
            </a>
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="/users" class="nav-link">Users</a></li>
            </ul>
        </header>
    </div>
    <main class="mt-4">
        <div class="container">
            <div class="row">
                <div class="col">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!-- Footer -->
        <footer class="footer pt-5 pb-4 pb-lg-5">
            <div class="container pt-lg-4">
                <div class="row pb-5">
                </div>
            </div>
        </footer>

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>


        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
